---
import MenuButton from '../buttons/MenuButton.astro';
import { navLinks } from '../../data/navigation';
import './Navigation.scss'
// Asumimos que tienes los iconos SVG o quieres usar texto por ahora
---

<!-- El id="sidebar-menu" es crucial para que JavaScript lo encuentre -->
<aside id="sidebar-menu" class="sidebar">
    <div class="sidebar-header">
        <!-- El id="close-menu-btn" también es crucial -->
        <button id="close-menu-btn" class="close-button" aria-label="Cerrar menú">
            × <!-- Una 'X' simple para cerrar -->
        </button>
    </div>

    <nav class="sidebar-nav">
        <ul>
            {navLinks.map(link => (
                <li>
                    <MenuButton href={link.href}>{link.text}</MenuButton>
                </li>
            ))}
        </ul>
    </nav>

    <footer class="sidebar-footer">
        <a href="#" aria-label="Instagram">
            <!-- <IconInstagram /> -->
            IG
        </a>
        <a href="#" aria-label="YouTube">
            <!-- <IconYoutube /> -->
            YT
        </a>
        <span>@Click_Alternativo</span>
    </footer>
</aside>