---
import "../../styles/global.scss";
import "./layaout.scss";
// Importa el men√∫ aqu√≠, en el layout
import SidebarMenu from "../../components/menu/SideBarMenu.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Cuajo Project</title>
  </head>
  <body>
    <!-- 1. Bot√≥n para ABRIR el men√∫. Lo ponemos fuera para que siempre est√© visible -->
    <header>
      <button
        id="open-menu-btn"
        class="hamburger-button"
        aria-label="Abrir men√∫"
      >
        ‚ò∞ <!-- Este es el icono de hamburguesa (‚ò∞) -->
      </button>
    </header>

    <!-- 2. El componente del Sidebar. Se coloca aqu√≠, como hermano del <main> -->
    <SidebarMenu />
    <div id="sidebar-overlay" class="overlay"></div>

    <!-- El contenido principal de cada p√°gina (tu Welcome.astro, etc.) se renderiza aqu√≠ -->
    <main>
      <slot />
    </main>

    <!-- 3. El script para controlar la apertura/cierre. Debe estar aqu√≠. -->
    <script>
      const sidebar = document.getElementById("sidebar-menu");
      const openBtn = document.getElementById("open-menu-btn");
      const closeBtn = document.getElementById("close-menu-btn");
      const overlay = document.getElementById("sidebar-overlay"); // <-- A√±ade esto

      if (sidebar && openBtn && closeBtn && overlay) {
        // <-- A√±ade overlay a la condici√≥n
        openBtn.addEventListener("click", () =>
          sidebar.classList.add("is-open")
        );
        closeBtn.addEventListener("click", () =>
          sidebar.classList.remove("is-open")
        );

        // üëá A√ëADE ESTA L√çNEA üëá
        // Cierra el men√∫ si hacen clic en el overlay
        overlay.addEventListener("click", () =>
          sidebar.classList.remove("is-open")
        );
      }

      const navLinks = sidebar.querySelectorAll(".sidebar-nav a");

      // A√±ade un event listener a cada enlace
      navLinks.forEach((link) => {
        link.addEventListener("click", () => {
          // Si el men√∫ est√° abierto, ci√©rralo
          if (sidebar.classList.contains("is-open")) {
            sidebar.classList.remove("is-open");
          }
        });
      });
    </script>

    <!-- Estilos para el bot√≥n hamburguesa -->
    <style>
      .hamburger-button {
        position: fixed;
        top: 20px;
        left: 20px;
        z-index: 1001; /* S√∫per importante: para que est√© por encima de todo */
        background: #1e1e1e;
        color: white;
        border: none;
        font-size: 24px;
        padding: 10px 12px;
        border-radius: 8px;
        cursor: pointer;
      }
    </style>
  </body>
</html>
